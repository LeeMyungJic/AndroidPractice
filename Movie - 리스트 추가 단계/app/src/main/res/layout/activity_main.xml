<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_margin="10dp"

>

    <ScrollView

            android:background="#EEEEEE"
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:background="#FFFFFF"
                      android:orientation="vertical">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back">

                <ImageView

                        android:layout_width="300dp"
                        android:layout_height="200dp" app:srcCompat="@drawable/image11"
                        android:id="@+id/imageView5"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="군도"
                                android:textColor="#FFFFFF"
                                android:layout_width="155dp"
                                android:textSize="40dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content" android:id="@+id/textView2"
                                android:layout_weight="1"/>

                        <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent" app:srcCompat="@drawable/ic_15"
                                android:layout_marginRight="100dp"
                                android:id="@+id/imageView6" android:layout_weight="1"/>
                    </LinearLayout>

                    <TextView
                            android:layout_marginTop="5dp"
                            android:text="2014.07.23 개봉"
                            android:textColor="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView3"/>

                    <TextView
                            android:text="액션 / 137분"
                            android:textColor="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView4"/>

                    <LinearLayout

                            android:orientation="horizontal"

                            android:layout_gravity="left"

                            android:layout_width="wrap_content"

                            android:layout_marginTop="5dp"

                            android:layout_height="wrap_content">

                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_thumb_up"
                                app:srcCompat="@drawable/thumb_up"
                                android:id="@+id/thumb_up_button" android:layout_weight="1"/>

                        <TextView

                                android:text="200"
                                android:textColor="#FFFFFF"
                                android:layout_marginRight="5dp"


                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/s_u"
                                android:layout_weight="1"/>

                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_thumb_down"
                                app:srcCompat="@drawable/thumb_down"
                                android:id="@+id/thumb_down_button" android:layout_weight="1"/>

                        <TextView

                                android:text="51"
                                android:textColor="#FFFFFF"
                                android:layout_width="56dp"
                                android:layout_height="wrap_content" android:id="@+id/s_d"
                                android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TableLayout android:layout_width="match_parent"

                         android:stretchColumns="*"

                         android:background="#EEEEEE"

                         android:layout_height="wrap_content">

                <TableRow>

                    <TextView

                            android:background="#FFFFFF"

                            android:layout_width="match_parent"

                            android:layout_height="match_parent"

                            android:gravity="center"

                            android:textSize="24sp"

                            android:layout_marginRight="5dp"

                            android:text="예매율"/>

                    <TextView

                            android:background="#FFFFFF"

                            android:layout_width="match_parent"

                            android:layout_height="match_parent"

                            android:gravity="center"

                            android:textSize="24sp"

                            android:layout_marginRight="5dp"

                            android:text="평점"/>

                    <TextView

                            android:background="#FFFFFF"

                            android:layout_width="match_parent"

                            android:layout_height="match_parent"

                            android:gravity="center"

                            android:textSize="24sp"

                            android:text="누적관객수"/>

                </TableRow>

                <TableRow>

                    <LinearLayout

                            android:layout_height="match_parent"

                            android:layout_width="match_parent"

                            android:layout_marginRight="5dp"

                            android:orientation="horizontal">

                        <TextView

                                android:text="5위"

                                android:background="#FFFFFF"

                                android:layout_width="wrap_content"

                                android:gravity="center"

                                android:layout_height="wrap_content" android:id="@+id/textView14"

                                android:layout_weight="1"

                        />

                        <TextView

                                android:text="1.8%"

                                android:background="#FFFFFF"

                                android:gravity="center"

                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content" android:id="@+id/textView13"

                                android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout

                            android:layout_marginRight="5dp"

                            android:background="#FFFFFF"

                            android:orientation="horizontal"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content">

                        <RatingBar

                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"

                                style="@style/Base.Widget.AppCompat.RatingBar.Small"

                                android:id="@+id/ratingBar"

                                android:numStars="3"

                                android:rating="2.5"

                                android:layout_weight="1"/>

                        <TextView

                                android:gravity="center"

                                android:text="9.8"

                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content" android:id="@+id/textView15"

                                android:layout_weight="1"/>

                    </LinearLayout>

                    <TextView

                            android:gravity="center"

                            android:text="839,399명"

                            android:layout_width="wrap_content"

                            android:background="#FFFFFF"

                            android:layout_height="wrap_content" android:id="@+id/textView16"/>

                </TableRow>

            </TableLayout>

            <TextView

                    android:text="줄거리"

                    android:layout_width="match_parent"

                    android:layout_marginRight="10dp"

                    android:textStyle="bold"

                    android:textColor="#000000"

                    android:layout_height="wrap_content"/>

            <TextView

                    android:text="@string/jgr"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content" android:id="@+id/textView12"

                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

            <TextView

                    android:layout_marginTop="10dp"

                    android:text="감독/출연"

                    android:textStyle="bold"

                    android:textColor="#000000"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content" android:id="@+id/textView17"/>

            <LinearLayout

                    android:layout_marginTop="5dp"

                    android:background="#FFFFFF"

                    android:orientation="vertical"

                    android:layout_width="match_parent"

                    android:layout_height="match_parent">

                <LinearLayout

                        android:orientation="horizontal"

                        android:layout_width="wrap_content"

                        android:layout_marginTop="10dp"

                        android:layout_height="match_parent">

                    <TextView

                            android:text="감독"

                            android:textStyle="bold"

                            android:layout_marginRight="10dp"

                            android:textColor="#000000"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content" android:id="@+id/textView19"

                            android:layout_weight="1"/>

                    <TextView

                            android:text="윤종빈"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content" android:id="@+id/textView18"

                            android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout

                        android:orientation="horizontal"

                        android:layout_width="wrap_content"

                        android:layout_height="match_parent">

                    <TextView

                            android:text="출연"

                            android:layout_marginRight="10dp"

                            android:textStyle="bold"

                            android:textColor="#000000"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content" android:id="@+id/textView21"

                            android:layout_weight="1"/>

                    <TextView

                            android:text="하정우(도치), 강동원(조윤)"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content" android:id="@+id/textView20"

                            android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout

                        android:background="#FFFFFF"

                        android:orientation="vertical"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">

                    <LinearLayout

                            android:layout_marginTop="10dp"

                            android:orientation="horizontal"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content">

                        <TextView

                                android:text="한줄평"

                                android:layout_marginRight="10dp"

                                android:textStyle="bold"

                                android:textColor="#000000"

                                android:layout_width="match_parent"

                                android:layout_height="wrap_content" android:id="@+id/textView22"

                                android:layout_weight="1"/>

                        <Button

                                android:layout_width="wrap_content"
                                android:gravity="center_horizontal"
                                android:drawableLeft="@drawable/ic_review_selected"
                                android:layout_height="38dp"
                                android:id="@+id/make"
                                android:text="작성하기"
                                android:background="#FFFFFF"
                                android:textColor="#FF4444"

                        />

                    </LinearLayout>

                    <LinearLayout

                            android:orientation="vertical"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content" android:layout_weight="1">
                        <ListView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/listView1"/>
                    </LinearLayout>

                    <Button

                            android:text="모두 보기"

                            android:background="#FFFFFF"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content" android:id="@+id/seeall"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                    android:background="#FFFFFF"

                    android:layout_marginTop="10dp"

                    android:layout_marginBottom="10dp"

                    android:orientation="horizontal"

                    android:layout_width="match_parent"

                    android:layout_height="match_parent">


                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_kakao"
                        android:adjustViewBounds="true"
                        android:background="#FFFFFF"
                        android:id="@+id/imageButton3" android:layout_weight="1"/>
                <ImageButton
                        android:layout_width="96dp"
                        android:adjustViewBounds="true"
                        android:background="#FFFFFF"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_facebook"
                        android:id="@+id/imageButton4" android:layout_weight="1"/>
                <Button

                        android:layout_marginRight="20dp"

                        android:text="예매하기"

                        android:layout_marginLeft="20dp"
                        android:textColor="#FFFFFF"
                        android:background="#FF4444"
                        android:layout_width="140dp"
                        android:layout_height="80dp" android:id="@+id/button2" android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>