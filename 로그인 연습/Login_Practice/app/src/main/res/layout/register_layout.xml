<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_margin="20dp"
              android:layout_height="match_parent">

    <TextView
            android:text="Register Page"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="아이디"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/registerID" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="비밀번호"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/registerPass" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="비밀번호 확인"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/registerPassCheck"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="이메일"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/registerEmail"
                android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:text="가입하기"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/registButton"/>
    <Button
            android:text="돌아가기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/cancelButton"/>
</LinearLayout>